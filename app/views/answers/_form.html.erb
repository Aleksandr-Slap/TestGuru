<%= form_with model: [@question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </p>
  
  <p>  
    <%= form.label :question_id %>
    <%= form.collection_select :question_id, Question.all, :id, :body, prompt: true %>
  </p>
  
  <p>  
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %><br>  
  </p>
    
  <p><%= form.submit %></p>  

<% end %>
