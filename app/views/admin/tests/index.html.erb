<div class="card justify-content-center mt-3 border-primary">
  <div class=" card-body">  
    <h1 class="text-center"><%= t('.header') %></h1>

    <%= link_to t('.new_test'), new_admin_test_path %>

    <table class="table table-bordered table-hover table-success table-striped text-center">
      <tr>
        <th class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th>
          <%= t('.level') %></th>
        <th><%= t('.questions') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
        
        <%= render @tests %>

    </table>
    <p><%= link_to 'Gists', admin_gists_path, class: 'btn btn-primary' %></p>
  </div>    
</div>    
      
  